#!/usr/bin/env bash
proj_id=andsnews
venv_dir=/home/milan/venv/andsnews3
version=`date +%Y%m%d%H%M`

function syntax {
  echo $"Usage:"
  echo $"$0 run    - Run development server"
  echo $"$0 build  - Build client"
  echo $"$0 deploy - Deploy"
  exit 1
}

if [ $# -eq 0 ]
  then
    syntax
else
  case $1 in
    run)
      source $venv_dir/bin/activate
      python main.py
      # vue ui
      exit ;;
    build)
      sed -i -E "/VUE_APP_VERSION/s/[[:digit:]]{12}/$version/g" vue2/.env
      bucket=`gsutil du -s gs://andsnews.appspot.com | tee | grep -Eo '[[:digit:]]+'`
      echo $bucket | awk '{ size =$1 /1024/1024**2 ; print "BUCKET SIZE " size " GB" }'
      sed -i -E "/VUE_APP_BUCKET/s/[[:digit:]]+/$bucket/g" vue2/.env
      yarn --cwd vue2/ build
      exit ;;
    deploy)
      gcloud app deploy --project=$proj_id --version=$version app.yaml index.yaml dos.yaml
      # gcloud datastore indexes cleanup index.yaml
      exit ;;
    *)
      syntax
  esac
fi
