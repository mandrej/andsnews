#!/usr/bin/env bash
python=/home/milan/venv/ands/bin/python
appengine=/home/milan/google_appengine
work=/home/milan/work

if [[ $# -eq 0 ]] ; then
  $python $appengine/dev_appserver.py --storage_path=$work/andsnews_storage/ app_local.yaml
  exit
fi

if [[ $# -eq 1 ]] ; then
  case $1 in
    build)
      cd client
      # echo $(pwd)
      echo polymer build
      cd ..
      exit
      ;;
    deploy)
      echo $"Usage: $0 deploy version_id"
      exit 1
      ;;
    *)
      echo $"Usage: $0 build"
      exit 1
  esac
fi

if [[ $# -eq 2 ]] ; then
  case $1 in
    deploy)
      echo gcloud app deploy -v $2 app.yaml index.yaml
      exit
      ;;
    *)
      echo $"Usage: $0 deploy version_id"
      exit 1
  esac
fi

# $python $appengine/appcfg.py $1 .
# echo $"Usage: $0 Run development server"
# echo $"Usage: $0 {build|deploy version}"
# exit 1

