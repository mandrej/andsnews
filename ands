#!/usr/bin/env bash
proj_id=andsnews
venv_dir=/home/milan/venv/andsnews3
version=`date +%Y%m%d%H%M`


function syntax {
  echo $"Usage:"
  echo $"$0 server  - Run development server"
  echo $"$0 build  - Build client"
  echo $"$0 deploy - Deploy api or client"
  exit 1
}

if [ $# -eq 0 ]
  then
    syntax
else
  case $1 in
    server)
      source $venv_dir/bin/activate
      python api/main.py
      # vue ui
      exit ;;
    build)
      sed -i -E "/VUE_APP_VERSION/s/[[:digit:]]{12}/$version/g" vue2/.env
      sed -i -E "/assetsVersion/s/[[:digit:]]{12}/$version/g" vue2/vue.config.js
      yarn --cwd vue2/ build
      exit ;;
    deploy)
      case $2 in
        api)
          gcloud app deploy --project=$proj_id --version=$version dispatch.yaml api/app.yaml api/index.yaml api/dos.yaml
          # gcloud datastore indexes cleanup index.yaml
          exit ;;
        client)
          gcloud app deploy --project=$proj_id --version=$version vue2/app.yaml
          exit ;;
        *)
          echo
          echo $"Provide service to deploy: api | client"
          exit 1
      esac ;;
    *)
      syntax
  esac
fi
